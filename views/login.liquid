{% layout "template" %}
{% block content %}
<style>
  .form-container {
    width: 100%;
    height: 100%;
    display: -ms-flexbox;
    display: -webkit-box;
    display: flex;
    -ms-flex-align: center;
    -ms-flex-pack: center;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
  }

  .form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
  }

  .form-signin .checkbox {
    font-weight: 400;
  }

  .form-signin .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
  }

  .form-signin > div {
    margin-bottom: 10px;
  }

  .form-signin input[type="text"] {
    margin-bottom: 10px;
  }

  .form-signin input[type="password"] {
    margin-bottom: 10px;
  }

  .form-signin button[type="submit"] {
    margin-bottom: 10px;
  }
</style>

<div class="form-container">
  <form class="form-signin" action="" method="POST">
    <div>
      {% include 'logo' %}
    </div>
    <label for="inputUser" class="sr-only">Username</label>
    <input name="username" type="text" id="inputUser" class="form-control" placeholder="Username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    {% if info_text %}
    <div class="alert alert-{{info_style}}" role="alert">
      {{info_text}}
    </div>
    {% endif %}
    <div class="dropdown">
      <a id="style-dropdown" class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
        aria-expanded="false">Style</a>
      <div class="dropdown-menu">
        <script>
          Object.keys(themes).forEach(theme => {
            document.write('<a class="dropdown-item' + (theme == localStorage.getItem(storageStyleKey) ? ' active' : '') + '" onclick="changeTheme(\'' + theme + '\')" href="">' + theme.substr(0, 1).toUpperCase() + theme.substr(1) + '</a>');
          });
        </script>
      </div>
    </div>
  </form>
</div>
{% endblock %}
